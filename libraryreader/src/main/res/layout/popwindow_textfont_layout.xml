<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mShowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_reader_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_35dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:background="@drawable/search_content_textfont_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewFont1"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_35dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/a1"
            android:textColor="@color/home_item_pressed_color"
            android:textSize="@dimen/txt_18sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/home_item_pressed_color" />

        <TextView
            android:id="@+id/textViewFont2"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_35dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/a"
            android:textColor="@color/home_item_pressed_color"
            android:textSize="@dimen/txt_18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:src="@mipmap/ic_rzsmall" />

        <SeekBar
            android:id="@+id/mLightSeakBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="255"
            android:maxHeight="1dp"
            android:minHeight="1dp"
            android:scrollbars="horizontal"
            android:thumb="@mipmap/ic_jd" />

        <ImageButton
            android:layout_width="@dimen/margin_20dp"
            android:layout_height="@dimen/margin_20dp"
            android:background="@mipmap/ic_rz"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/txt_18sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp" />

</LinearLayout>