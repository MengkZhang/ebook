<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_ffffff</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@color/color_ffffff</item>
        <item name="colorAccent">@color/color_989898</item>
        <item name="colorControlNormal">#EFEFEF</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="scannerTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="noAnimationTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@animator/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@animator/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@animator/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@animator/slide_out_right</item>
    </style>

    <style name="NoTitleTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoTitleTranslucentTheme" parent="NoTitleTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Activity_Dialog_Theme" parent="NoTitleTranslucentTheme">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="text_title_forlending">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="text_content_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#989898</item>
    </style>

    <style name="NoBackgroundTheme" parent="AppTheme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Reader_NoActionBar_FullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="NoActionBar_FullScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_ffffff</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@color/color_ffffff</item>
        <item name="colorAccent">@color/color_989898</item>
        <item name="colorControlNormal">#EFEFEF</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Theme.ToolBar.Menu" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- 设置-弹窗的背景-颜色-->
        <item name="android:colorBackground">@color/color_ffffff</item>
        <!-- 字体的颜色-->
        <item name="android:textColor">@color/color_ffffff</item>
        <!-- 字体大小-->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="common_error_txt_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="common_error_bottom_txt_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="library_grade_text">
        <item name="android:textColor">#945f30</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/bg_library_common</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="book_detail_text_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="search_text_left_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="book_detail_introduction_title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="book_detail_introduction_content">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#989898</item>
    </style>

    <style name="item_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#dddddd</item>
    </style>

    <style name="BaseDialogTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_ffffff</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@color/color_ffffff</item>
        <item name="colorAccent">@color/color_989898</item>
        <item name="colorControlNormal">#EFEFEF</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomDialog" parent="@style/BaseDialogTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/dialogWindowAnim</item>
    </style>

    <!-- 对话框主题 -->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- 末行对齐方式 -->
    <declare-styleable name="AlignTextView">
        <attr name="align" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <style name="pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="CustomAlertDialog" parent="@style/Base.AlertDialog.AppCompat">
        <item name="android:windowBackground">@color/bg_pop_window</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8dp</item>

    </style>

    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_push_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_push_out</item>
    </style>

    <style name="RecyclerTabLayout">
        <item name="tabMinWidth">72dp</item>
        <item name="tabMaxWidth">264dp</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/RecyclerTabLayout.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="RecyclerTabLayout.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="dl_progress_bar_style">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/bg_video_cache_pb</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">10dip</item>
    </style>


    <style name="CLBottomSheet" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CLDialog_title" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CLDialog_content" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Splash_Theme" parent="NoTitleTheme">
        <item name="android:background">@drawable/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--@drawable/bg_splash_full_screen-->
    <style name="Splash_Theme_Full" parent="Theme.AppCompat.Light.NoActionBar">
        <!--设置背景图片-->
        <item name="android:background">@mipmap/bg_splash_full_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/color_translate</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
