<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divider_view"/>

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/main_tab_group"
        android:background="@color/color_dcdcdc" />

    <RadioGroup
        android:id="@+id/main_tab_group"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <com.tzpt.cloudlibrary.widget.DrawableCenterRadioButton
            android:id="@+id/home_page_rb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bg_main_rbt"
            android:gravity="center_horizontal"
            android:text="首页"
            android:textColor="@color/txt_main_rbt"
            android:textSize="12sp" />

        <com.tzpt.cloudlibrary.widget.DrawableCenterRadioButton
            android:id="@+id/attention_lib_rb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bg_attention_rbt"
            android:gravity="center_horizontal"
            android:text="关注"
            android:textColor="@color/txt_main_rbt"
            android:textSize="12sp" />

        <com.tzpt.cloudlibrary.widget.DrawableCenterRadioButton
            android:id="@+id/user_rb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bg_mine_rbt"
            android:gravity="center_horizontal"
            android:text="我的"
            android:textColor="@color/txt_main_rbt"
            android:textSize="12sp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:clickable="false">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:clickable="false">

            <TextView
                android:id="@+id/msg_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:minWidth="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:background="@drawable/bg_oval_ff0000"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
