<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_idcard_info_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/register_nick_name_et"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="text"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            tools:text="昵称" />

        <ImageView
            android:id="@+id/register_nick_delete_box1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:focusable="true"
            android:src="@mipmap/ic_delete_text"
            android:textColor="@color/color_666666"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/item_line_zero"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/color_f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:background="@color/color_ffffff"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/register_reader_name_et"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            tools:text="姓名" />

        <ImageView
            android:id="@+id/register_name_delete_box1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:focusable="true"
            android:src="@mipmap/ic_delete_text"
            android:textColor="@color/color_666666"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/item_line_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/color_f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:background="@color/color_ffffff"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="身份证"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/register_id_card_et"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:digits="@string/digits_txt"
            android:gravity="center_vertical"
            android:inputType="text"
            android:maxLength="18"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="#989898"
            android:textSize="16sp"
            tools:text="身份证" />

        <ImageView
            android:id="@+id/register_name_delete_box2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:focusable="true"
            android:src="@mipmap/ic_delete_text"
            android:textColor="@color/color_666666"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>