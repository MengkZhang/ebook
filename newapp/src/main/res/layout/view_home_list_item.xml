<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/home_item_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="17.5dp"
        android:paddingBottom="8.5dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/home_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:text="附近馆"
            android:textColor="#191919"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home_item_sub_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/home_item_title_tv"
            android:layout_toRightOf="@+id/home_item_title_tv"
            android:drawableEnd="@mipmap/ic_right_arrow_lib_item"
            android:drawableRight="@mipmap/ic_right_arrow_lib_item"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:textColor="#999999"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="(3000个)" />

    </RelativeLayout>

    <com.tzpt.cloudlibrary.widget.recyclerview.NoScrollRecyclerView
        android:id="@+id/home_item_cell_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingBottom="8.5dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="none" />

</LinearLayout>