<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_translate_common">

    <RelativeLayout
        android:id="@+id/library_pic_img_rl"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="9.5dp"
        android:layout_marginStart="9.5dp"
        android:layout_marginTop="2dp"
        android:background="@mipmap/bg_near_library_logo">

        <ImageView
            android:id="@+id/library_pic_img"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:padding="4dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/library_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/library_pic_img_rl"
        android:layout_marginLeft="9.5dp"
        android:layout_marginStart="9.5dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/library_pic_img_rl"
        android:layout_toRightOf="@+id/library_pic_img_rl"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="0dp"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="16sp"
        tools:text="涪城区图书馆" />


    <LinearLayout
        android:id="@+id/library_book_count_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/library_address_tv"
        android:layout_alignLeft="@+id/library_name_tv"
        android:layout_alignStart="@+id/library_name_tv"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/library_book_count_tv"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_home_lib_book_count"
            android:drawablePadding="4dp"
            android:drawableStart="@mipmap/ic_home_lib_book_count"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:singleLine="true"
            android:text="1000000+册"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/library_heat_tv"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_home_lib_heat"
            android:drawablePadding="3.5dp"
            android:drawableStart="@mipmap/ic_home_lib_heat"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:singleLine="true"
            android:text="10000+人"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/library_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_home_lib_distance"
            android:drawablePadding="4dp"
            android:drawableStart="@mipmap/ic_home_lib_distance"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:singleLine="true"
            android:text="0km"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/library_address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/library_pic_img_rl"
        android:layout_alignEnd="@+id/library_book_count_ll"
        android:layout_alignLeft="@+id/library_name_tv"
        android:layout_alignRight="@+id/library_book_count_ll"
        android:layout_alignStart="@+id/library_name_tv"
        android:layout_marginBottom="6.5dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="0dp"
        android:singleLine="true"
        android:textColor="#999999"
        android:textSize="12sp"
        tools:text="绵阳市涪城区毅德街中段德街中中段德街" />

</RelativeLayout>
