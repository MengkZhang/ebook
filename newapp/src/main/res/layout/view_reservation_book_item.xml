<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/view_account_user_book_head_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="14dp"
        android:background="#e2e2e2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <com.tzpt.cloudlibrary.widget.DrawableCenterTextView
            android:id="@+id/item_book_cancel_reservation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:background="@drawable/item_common_bg_forparise"
            android:drawableLeft="@mipmap/cancel_appointment"
            android:drawablePadding="5dp"
            android:drawableStart="@mipmap/cancel_appointment"
            android:gravity="center_vertical"
            android:text="取消预约"
            android:textColor="#fb755a"
            android:textSize="15sp" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#e2e2e2"
            android:layout_gravity="center"/>
        <com.tzpt.cloudlibrary.widget.DrawableCenterTextView
            android:id="@+id/item_book_enter_book_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:background="@drawable/item_common_bg_forparise"
            android:drawableLeft="@mipmap/enlarge"
            android:drawablePadding="5dp"
            android:drawableStart="@mipmap/enlarge"
            android:gravity="center_vertical"
            android:text="进入该馆"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>