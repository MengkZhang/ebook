<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pp_root_view_rl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_reader_background"
    android:gravity="bottom|center"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/toolbar_progress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/toolbar_read_progress_minus_imgBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:src="@mipmap/ic_leftjt" />

        <SeekBar
            android:id="@+id/toolbar_read_progress_seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scrollbars="horizontal"
            android:thumb="@mipmap/ic_jd"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/toolbar_read_progress_increase_imgBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/ic_rightjt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <com.tzpt.cloudlibrary.widget.DrawableCenterTextView
            android:id="@+id/slide_menu_imgBtn"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_ml"
            android:drawablePadding="9dp"
            android:gravity="center_horizontal"
            android:text="目录"
            android:textColor="@color/color_ffffff"
            android:textSize="12sp" />


        <com.tzpt.cloudlibrary.widget.DrawableCenterTextView
            android:id="@+id/add_mark_imgBtn"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_sq"
            android:drawablePadding="9dp"
            android:gravity="center_horizontal"
            android:text="书签"
            android:textColor="@color/color_ffffff"
            android:textSize="12sp" />

        <com.tzpt.cloudlibrary.widget.DrawableCenterTextView
            android:id="@+id/size_imgBtn"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_text_font"
            android:drawablePadding="9dp"
            android:gravity="center_horizontal"
            android:text="设置"
            android:textColor="@color/color_ffffff"
            android:textSize="12sp" />

        <com.tzpt.cloudlibrary.widget.DrawableCenterTextView
            android:id="@+id/light_imgBtn"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_yj"
            android:drawablePadding="9dp"
            android:gravity="center_horizontal"
            android:text="夜间"
            android:textColor="@color/color_ffffff"
            android:textSize="12sp" />

    </LinearLayout>

    <!--<android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"/>-->

</LinearLayout>

