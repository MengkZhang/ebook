<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tzpt.cloudlibrary.widget.multistatelayout.MultiStateLayout
        android:id="@+id/multi_state_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_empty_view="@layout/common_empty_big_view"
        app:layout_error_view="@layout/common_net_error_view"
        app:layout_progress_view="@layout/common_progress_view" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="18dp">

            <TextView
                android:id="@+id/video_detail_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="top"
                android:lineSpacingExtra="8sp"
                android:textColor="#333333"
                android:textSize="16sp"
                tools:text="中考英语核心语法精讲中考英语核心语法\n精语核心语法精讲" />

            <TextView
                android:id="@+id/video_detail_watch_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="11.5dp"
                android:drawableLeft="@mipmap/ic_video_item_play"
                android:drawablePadding="7dp"
                android:drawableStart="@mipmap/ic_video_item_play"
                android:textColor="#999999"
                android:textSize="13sp"
                tools:text="2000次播放" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="17dp"
                android:background="@color/color_f4f4f4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/class_desc"
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/video_detail_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="30dp"
                android:lineSpacingExtra="8.5sp"
                android:textColor="#999999"
                android:textSize="13sp"
                tools:text="语法精讲" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>