<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_top_head_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_photo_pressed" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_top_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:text="@string/click_to_login"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/user_top_nick_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/user_top_name_tv"
            android:layout_toRightOf="@+id/user_top_name_tv"
            android:maxLength="10"
            android:paddingBottom="2dp"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/user_top_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_top_name_tv"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="手机号" />

        <TextView
            android:id="@+id/user_top_phone_number_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/user_top_nick_name_tv"
            android:layout_alignStart="@+id/user_top_nick_name_tv"
            android:layout_below="@+id/user_top_name_tv"
            android:layout_toEndOf="@+id/user_top_phone_tv"
            android:layout_toRightOf="@+id/user_top_phone_tv"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="手机号" />

        <ImageView
            android:id="@+id/user_top_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_more" />

    </RelativeLayout>

</LinearLayout>