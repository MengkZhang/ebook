<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/share_layout_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_translate"
    tools:context="com.tzpt.cloudlibrary.ui.share.ShareActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_f4f4f4"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/share_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <Button
            android:id="@+id/share_cancel_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_item_common"
            android:text="取消"
            android:textColor="@color/color_444444"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
