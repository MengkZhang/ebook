<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_common"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/video_complete_del_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:enabled="false"
        android:clickable="false"
        android:background="@null"
        android:button="@drawable/bg_pay_check"
        android:visibility="visible" />

    <TextView
        android:id="@+id/video_complete_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_toEndOf="@+id/video_complete_del_cb"
        android:layout_toLeftOf="@+id/video_complete_load_total_tv"
        android:layout_toRightOf="@+id/video_complete_del_cb"
        android:layout_toStartOf="@+id/video_complete_load_total_tv"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        tools:text="英语中考第二轮复习英英语中考第二轮复习英" />

    <TextView
        android:id="@+id/video_complete_load_total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/video_complete_name_tv"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="2.5dp"
        android:gravity="end"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        tools:text="400M" />

</RelativeLayout>