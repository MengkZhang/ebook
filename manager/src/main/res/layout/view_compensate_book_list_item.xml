<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/library_number_tv"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="WWWWW"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/code_number_tv"
        android:layout_width="72dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/library_number_tv"
        android:layout_toRightOf="@+id/library_number_tv"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="2"
        android:text="00001"
        android:textColor="#333333"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/book_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/code_number_tv"
        android:layout_toLeftOf="@+id/book_price_tv"
        android:layout_toRightOf="@+id/code_number_tv"
        android:layout_toStartOf="@+id/book_price_tv"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:maxLines="2"
        android:minLines="2"
        android:text="书名"
        android:textColor="#333333"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/book_price_tv"
        android:layout_width="78dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/choose_book_cb"
        android:layout_toStartOf="@+id/choose_book_cb"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:text="押1000.00"
        android:textColor="#333333"
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/choose_book_cb"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/mRightView"
        android:layout_toStartOf="@+id/mRightView"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:padding="10dp" />

    <View
        android:id="@+id/mRightView"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/attach_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/book_price_tv"
        android:layout_alignRight="@+id/book_price_tv"
        android:layout_below="@+id/choose_book_cb"
        android:layout_marginTop="-5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="溢1000.00"
        android:textColor="#ff0000"
        android:textSize="15sp"
        android:visibility="gone" />

</RelativeLayout>