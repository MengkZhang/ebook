<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/scan_book_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="35dp"
        android:textColor="#cccccc"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scan_book_status"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/scan_book_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="数量 0"
            android:textColor="#cccccc"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/scan_book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额 0.00"
            android:textColor="#cccccc"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/scan_book_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="押金 0.00"
            android:textColor="#cccccc"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>