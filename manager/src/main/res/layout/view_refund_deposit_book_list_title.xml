<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/library_number"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="馆号"
        android:textColor="#888888"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/code_number"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/library_number"
        android:layout_toRightOf="@+id/library_number"
        android:gravity="center"
        android:singleLine="true"
        android:text="条码号"
        android:textColor="#888888"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/code_number"
        android:layout_toLeftOf="@+id/book_price"
        android:layout_toRightOf="@+id/code_number"
        android:layout_toStartOf="@+id/book_price"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="书名"
        android:textColor="#888888"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/book_price"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="end|center_vertical"
        android:singleLine="true"
        android:text="定价"
        android:textColor="#888888"
        android:textSize="16sp" />

</RelativeLayout>