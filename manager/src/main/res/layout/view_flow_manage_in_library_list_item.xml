<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/item_selector"
    android:orientation="vertical">

    <TextView
        android:id="@+id/library_item_lib_code"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="WWWWW"
        android:textColor="#444444"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/library_item_lib_code"
        android:layout_toRightOf="@+id/library_item_lib_code"
        android:orientation="vertical">

        <TextView
            android:id="@+id/library_item_lib_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="石塘镇综合文化站书屋"
            android:textColor="#444444"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/library_item_lib_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="罗燕 13990144636"
            android:textColor="#444444"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>