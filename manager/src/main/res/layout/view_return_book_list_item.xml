<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/return_book_lib_code"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:text="馆号"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/return_book_bar_number"
        android:layout_width="72dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/return_book_lib_code"
        android:layout_toRightOf="@+id/return_book_lib_code"
        android:gravity="center"
        android:maxLines="2"
        android:text="12345678945621123321"
        android:textColor="#333333"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/return_book_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/return_book_bar_number"
        android:layout_toLeftOf="@+id/return_book_price"
        android:layout_toRightOf="@+id/return_book_bar_number"
        android:layout_toStartOf="@+id/return_book_price"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:maxLines="2"
        android:text="书名"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/return_book_price"
        android:layout_width="65dp"
        android:layout_centerVertical="true"
        android:layout_height="50dp"
        android:gravity="end|center_vertical"
        android:singleLine="true"
        android:text="定价"
        android:textColor="#333333"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/return_book_penalty"
        android:layout_toStartOf="@+id/return_book_penalty" />

    <TextView
        android:id="@+id/return_book_penalty"
        android:layout_width="50dp"
        android:layout_centerVertical="true"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="end|center_vertical"
        android:singleLine="true"
        android:text="罚金"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/return_book_attach_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/return_book_price"
        android:layout_alignRight="@+id/return_book_price"
        android:layout_below="@+id/return_book_price"
        android:layout_marginTop="-5dp"
        android:ellipsize="end"
        android:gravity="end|center_vertical"
        android:singleLine="true"
        android:text="溢1000.00"
        android:textColor="#ff0000"
        android:textSize="15sp"
        android:visibility="gone" />
</RelativeLayout>