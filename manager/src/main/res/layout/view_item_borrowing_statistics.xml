<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_borrowing_lib_code"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="馆号"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_borrowing_barcode"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/item_borrowing_lib_code"
        android:layout_toRightOf="@+id/item_borrowing_lib_code"
        android:gravity="center"
        android:maxLines="2"
        android:text="条码号"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_borrowing_book_price"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/item_borrowing_barcode"
        android:layout_toRightOf="@+id/item_borrowing_barcode"
        android:gravity="center_vertical|end"
        android:singleLine="true"
        android:text="定价"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_borrowing_book_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/item_borrowing_book_price"
        android:layout_toRightOf="@+id/item_borrowing_book_price"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="读者"
        android:textColor="#333333"
        android:textSize="16sp" />
</RelativeLayout>