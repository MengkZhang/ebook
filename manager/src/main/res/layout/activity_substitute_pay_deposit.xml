<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tzpt.cloundlibrary.manager.widget.TitleBarView
        android:id="@+id/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/substitute_pay_deposit_info_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#694a2c"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="#ffe3ca"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pay_deposit_pay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:text="支付方式"
        android:textColor="#999999"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/pay_deposit_lib_pay_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@mipmap/ic_deposit_pay" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="备用金账户"
            android:textColor="#333333"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/pay_deposit_lib_ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@drawable/bg_pay_check"
            android:checked="true"
            android:clickable="false"
            android:focusable="false"
            android:minHeight="50dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lib_balance_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pay_deposit_status_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/pay_deposit_wechat_pay_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@mipmap/ic_weixin_pay" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="微信"
            android:textColor="#333333"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/pay_deposit_wechat_ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@drawable/bg_pay_check"
            android:checked="false"
            android:clickable="false"
            android:focusable="false"
            android:minHeight="50dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pay_deposit_alipay_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@mipmap/ic_alipay_pay" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="支付宝"
            android:textColor="#333333"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/pay_deposit_alipay_ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@drawable/bg_pay_check"
            android:clickable="false"
            android:focusable="false"
            android:minHeight="50dp" />
    </LinearLayout>

    <Button
        android:id="@+id/pay_deposit_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn_round_8a633d"
        android:gravity="center"
        android:text="确定"
        android:textColor="@drawable/bg_confirm_btn_txt_color"
        android:textSize="18sp" />

</LinearLayout>